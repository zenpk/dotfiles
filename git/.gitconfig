[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[core]
	editor = vim
	excludesFile = $HOME/.gitignore # change this to absolute path
[safe]
	directory = *
[push]
	autoSetupRemote = true
[alias]
    lazy = "!f() { git add --all; git commit -m \"$*\" && git push; }; f"
    clonessh = "!f() { git clone \"$1\" --config core.sshCommand=\"ssh -i ~/.ssh/${2:-id_rsa}\"; }; f"
    signssh = "!f() { git config gpg.format ssh && git config user.signingkey \"~/.ssh/$1.pub\" && git config commit.gpgsign true; }; f"
    sw = "!f() { branch=$(git branch -a | fzf --cycle); if [ -n \"$branch\" ]; then git switch $(echo $branch | xargs); fi; }; f"
    glog = "!git log --graph --decorate --oneline --all"
    flog = "!git log --pretty=format:\"%h%x09%an%x09%s\" | fzf --delimiter='\t' --cycle --bind=ctrl-k:preview-up,ctrl-j:preview-down --preview='git show --color=always {1}' --with-nth=2.. | cut -d '\t' -f 1"
	count-lines = "!git log --author=\"$1\" --pretty=tformat: --numstat | awk '{ add += $1; subs += $2; } END { printf \"added lines: %s, removed lines: %s\\n\", add, subs }' #"
